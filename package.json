{
  "name": "trip-o-meter-web",
  "version": "0.0.0",
  "engines": {
    "node": "6.9.4",
    "npm": "4.1.2"
  },
  "description": "API for fetching fuel prices and web version of trip-o-meter",
  "keywords": [
    "Fuel",
    "api",
    "rest",
    "node",
    "express"
  ],
  "author": "Raghu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:RaghuChandrasekaran/trip-o-meter-web.git"
  },
  "main": "src/index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --forceExit",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "cross-env NODE_ENV=development backpack dev",
    "start:prod": "cross-env NODE_ENV=production backpack build && node ./build/main.js",
    "heroku-start": "npm run test && npm run docs && npm start",
    "docs": "apidoc -i src/ -o docs/ && cp -rf res/favicon.ico docs/img",
    "build": "backpack build"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!src/index.js"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "apidoc": {
    "name": "Trip-O-Meter",
    "version": "0.0.0",
    "description": "API used in Trip-O-Meter app",
    "title": "Trip-O-Meter",
    "url": "https://tripometer.herokuapp.com",
    "sampleUrl": "https://tripometerdev.herokuapp.com",
    "header": {
      "title": "Introduction",
      "filename": "res/header.md"
    },
    "template": {
      "withCompare": true
    }
  },
  "dependencies": {
    "apidoc": "^0.17.5",
    "axios": "^0.15.3",
    "backpack-core": "0.0.7",
    "body-parser": "^1.16.0",
    "cors": "^2.8.1",
    "cross-env": "^3.1.4",
    "express": "^4.14.0",
    "if-env": "^1.0.0",
    "morgan": "^1.7.0",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "jest-cli": "^18.1.0",
    "supertest": "^2.0.1"
  }
}